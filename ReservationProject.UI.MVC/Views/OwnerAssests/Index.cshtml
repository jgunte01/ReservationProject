@model IEnumerable<ReservationProject.DATA.EF.OwnerAssest>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AssetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AssetPhoto)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserDetail.UserID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AssetName)
        </td>
        <td>
           <img src="~/Content/img/@item.AssetPhoto" width="100" height="100"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserDetail.UserID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OwnerAssetID }) |
            @Html.ActionLink("Details", "Details", new { id=item.OwnerAssetID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OwnerAssetID })
        </td>
    </tr>
}

</table>
